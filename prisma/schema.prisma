generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String          @id @default(uuid())
  username      String          @unique
  email         String          @unique
  password      String
  avatar        String?
  googleId      String?         @unique
  twitterId     String?         @unique
  facebookId    String?         @unique
  
  tourReviews   TourReview[]
  carReviews    CarReview[]
  siteReviews   SiteReview[]
  
  favoriteTours FavoriteTour[]
  favoriteCars  FavoriteCar[]
  
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
}

model Tour {
  id            String          @id @default(uuid())
  name          String
  price         Int
  description   String          @db.Text
  city          String
  category      String
  date          String
  images        String[]
  duration      Int
  maxPeople     Int
  
  cars          Car[]
  reviews       TourReview[]
  favorites     FavoriteTour[]
  
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
}

model Car {
  id            String          @id @default(uuid())
  tourId        String?        
  tour          Tour?           @relation(fields: [tourId], references: [id], onDelete: SetNull)
  
  model         String
  brand         String
  price         Int            
  capacity      Int             
  drive         String         
  year          Int
  places        Int
  transmission  String          
  fuelType      String          
  images        String[]
  
  reviews       CarReview[]
  favorites     FavoriteCar[]
  
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
}

model TourReview {
  id            String          @id @default(uuid())
  tourId        String
  userId        String
  tour          Tour            @relation(fields: [tourId], references: [id], onDelete: Cascade)
  user          User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  rating        Int            
  comment       String          @db.Text
  images        String[]        
  
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  
  @@unique([tourId, userId])    
}

model CarReview {
  id            String          @id @default(uuid())
  carId         String
  userId        String
  car           Car             @relation(fields: [carId], references: [id], onDelete: Cascade)
  user          User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  rating        Int           
  comment       String          @db.Text
  images        String[]
  
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  
  @@unique([carId, userId])
}

model SiteReview {
  id            String          @id @default(uuid())
  userId        String
  user          User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  rating        Int             
  comment       String          @db.Text
  category      String          
  
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
}

model FavoriteTour {
  id            String          @id @default(uuid())
  userId        String
  tourId        String
  user          User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  tour          Tour            @relation(fields: [tourId], references: [id], onDelete: Cascade)
  
  createdAt     DateTime        @default(now())
  
  @@unique([userId, tourId])
}

model FavoriteCar {
  id            String          @id @default(uuid())
  userId        String
  carId         String
  user          User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  car           Car             @relation(fields: [carId], references: [id], onDelete: Cascade)
  
  createdAt     DateTime        @default(now())
  
  @@unique([userId, carId])
}